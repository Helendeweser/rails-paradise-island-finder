<div class="container card-trip">

  <div class="island-card">

    <%= cl_image_tag @island.photo.key, width: 800, style: "border-radius: 10px 0px 0px 10px;" %>

    <div class="price-and-book">
      <div class="card-trip-pricing">
        <p id="title-price">Price:</p>
        <p><%= @island.price %>€/night</p>
        <hr style="margin: 25px;">
        <div class="container upper-part d-flex btn btn-flat">
          <% if user_signed_in? %>
            <%= link_to "Book", island_path(@island), data: {turbo_method: :post, turbo_confirm: "Are you sure you want to book?"}, class: "btn btn-primary" %></p>
            <% else %>
            <%= link_to "Book", island_path(@island), data: {turbo_method: :post, turbo_confirm: "ERROR: You cannot book this if you're not signed in!"}, class: "btn btn-primary" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>


  <div class="card-trip-infos">
    <div><h2 style="line-height:3.5em;"><strong><%= @island.name %></strong></h2>
      <p><%= @island.description %></p>
      <div>
        <hr>
        <p style="line-height:3.5em;"><strong>Caracteristics :</strong></p>
        <p><ul style="list-style-type: '';">
          <li><i class="fa-regular fa-map"></i>   Location: <%= @island.address %></li>
          <li><i class="fa-regular fa-sun"></i>   Type: Private Island</li>
          <li><i class="fa-solid fa-ruler"></i>   Size: <%= @island.size %> Acres</li>
          <li><i class="fa-solid fa-umbrella-beach"></i>   Lifestyles: Islands With Beaches, Ocean Island, Turn Key, Income Potential</li>
          <li><i class="fa-solid fa-sack-dollar"></i>   Price: <%= @island.price %>€/night</li>
        </ul></p>
      </div>
    </div>
    <div>
      <hr style="margin-left: 140px;margin-right: 210px;">
      <div class="map show"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>

