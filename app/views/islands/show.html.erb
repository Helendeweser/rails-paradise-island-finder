<div class="container card-trip">

  <div class="island-card">
      <%= cl_image_tag @island.photo.key, width: 250 %>

    <div class="price-and-book">
      <div class="card-trip-pricing">Price: <%= @island.price %>â‚¬/night</div>
        <div class="container upper-part d-flex">
          <% if user_signed_in? %>
            <p class="btn btn-success" id="book-btn"><%= link_to "Book", island_path(@island), data: {turbo_method: :post, turbo_confirm: "Are you sure you want to book?"} %></p>
            <% else %>
            <p class="btn btn-success" id="book-btn"><%= link_to "Book", island_path(@island), data: {turbo_method: :post, turbo_confirm: "ERROR: You cannot book this if you're not signed in!"} %></p>
          <% end %>
        </div>
    </div>
  </div>


    <div class="card-trip-infos">
        <div><h2 style="line-height:3.5em;"><strong><%= @island.name %></strong></h2>
          <p><%= @island.description %></p>
            <div>
              <p style="line-height:3.5em;">Caracteristics :</p>
              <p><ul>
                <li>Region: Belize , Central America</li>
                <li>Location: 15 minutes boat ride from Placencia Village point</li>
                <li>Type: Private Island</li>
                <li>Size: <%= @island.size %> Acres</li>
                <li>Lifestyles: Islands With Beaches, Ocean Island, Turn Key, Income Potential</li>
              </ul></p>
            </div>
          </div>
      </div>
    </div>

  </div>
  <% if @island.user = current_user %>
    <p><%= link_to "Edit", edit_island_path(@island), class: "btn btn-primary"%></p>
    <p><%= link_to "Delete", island_path(@island), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"} %></p>


    <% end %>
  </div>
</div>
