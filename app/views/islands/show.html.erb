<div class="container">
  <div class="island-card">
      <%= cl_image_tag @island.photo.key %>
    <div class="card-trip">
      <div class="card-trip-infos">
        <div>
          <h2 style="line-height:3.5em;"><strong><%= @island.name %></strong></h2>
          <p><%= @island.description %></p>
          <div>
            <p style="line-height:3.5em;">Caracteristics :</p>
              <p><ul>
                <li>Name: Zama Caye</li>
                <li>Region: Belize , Central America</li>
                <li>Location: 15 minutes boat ride from Placencia Village point</li>
                <li>Type: Private Island</li>
                <li>Size: <%= @island.size %> Acres</li>
                <li>Lifestyles: Islands With Beaches, Ocean Island, Turn Key, Income Potential</li>
            </ul></p>
          </div>
        </div>
        <div class="card-trip-pricing">Price: <%= @island.price %>â‚¬/night</div>
      </div>
    </div>
  </div>
  <% if @island.user = current_user %>
    <p><%= link_to "Edit", edit_island_path(@island), class: "btn btn-primary"%></p>
    <p><%= link_to "Delete", island_path(@island), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"} %></p>
    <% end %>
</div>
