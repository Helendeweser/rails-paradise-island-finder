<div class="content">
    <div class="cards">
      <% @islands.each do |island| %>
        <%= link_to island_path(island) do %>
        <div class="card-groupe">
          <div class="card-category"
            style="background-image: url('<%= cl_image_path island.photo.key%>')">
            <p><%= island.name %></p>
          </div>
          <div class="card-info">
            <p><%= island.address %></p>
            <p><%= island.price %> â‚¬</p>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>

<%# here comes the mapppp %>

    <div class="map"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
